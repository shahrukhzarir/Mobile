<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="ID" />

    <TextView
        android:id="@+id/lblItemFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:text="First Name"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/lblItemSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Surname"
        android:layout_below="@+id/lblItemId"
        android:layout_alignStart="@+id/lblItemId" />

    <TextView
        android:id="@+id/lblItemPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textAlignment="textEnd"
        android:layout_alignBaseline="@+id/lblItemSurname"
        android:layout_alignBottom="@+id/lblItemSurname"
        android:layout_alignEnd="@+id/lblItemFirstName" />

</RelativeLayout>